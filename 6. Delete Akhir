#include <stdio.h>
#include <stdlib.h>

typedef  struct simpul dnode;

struct simpul
{
    int data;
    dnode *prev, *next;
};

void alokasi();
void tampil();
void insertAkhir();
void deleteAkhir();
void bebas();

dnode *p=NULL;
dnode *head=NULL;
dnode *hapus=NULL;

int main()
{
    char jwb;
    do
    {
        alokasi();
        fflush(stdin);
        insertAkhir();
        fflush(stdin);
        printf("Ingin memasukkan data lagi?");
        jwb = getchar();
        fflush(stdin);
    }
    while(jwb=='Y'||jwb=='y');
    tampil();
    deleteAkhir();
    printf("Data setelah delete : \n");
    tampil();
}

void insertAkhir()
{
    dnode *tail=head;
    if(head==NULL)
        head=p;
    else
    {
        while(tail->next!=NULL)
            tail=tail->next;
        p->prev=tail;
        tail->next=p;
        tail=p;
    }
}

void deleteAkhir()
{
    hapus=head;
    int key;
    printf("Delete data : ");
    scanf("%d", &key);
    fflush(stdin);
    if(head->data==key)
    {
        head=hapus->next;
        head->prev=NULL;
    }
    else
    {
        while(hapus->data!=key)
        {
            if(hapus->next==NULL)
            {
                printf("Key tidak ada \n");
                exit(0);
            }
            hapus=hapus->next;

        }
        if(hapus->next!=NULL)
            hapus->next->prev=hapus->prev;
        hapus->prev->next=hapus->next;
    }
    bebas();
}

void bebas()
{
    free(hapus);
    hapus=NULL;
}

void alokasi()
{
    p=(dnode*)malloc(sizeof(dnode));
    if(p==NULL)
    {
        printf("Gagal");
        exit(0);
    }
    else
    {
        printf("Masukkan nilai : ");
        scanf("%d", &p->data);
        fflush(stdin);
        p->next=NULL;
        p->prev=NULL;
    }
}

void tampil()
{
    dnode *p=head;
    do
    {
        printf("%d\n", p->data);
        p=p->next;
    }
    while(p!=NULL);
    puts("");
}
